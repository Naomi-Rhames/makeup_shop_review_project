<h1><%= @makeup.name%></h1>


<a href="/review/<%= @makeup.id%>">Leave a Review</a>

<img src="<%= @makeup.image %>" alt="makeup">
   

<h4><%= @makeup.price%></h4>
<h3><%= @makeup.model%></h3>



<h3>Written Reviews:</h3>
<hr>
<% @makeup.reviews.each do |r|  %>
<h4><%= r.name%></h4>
<h4><%= r.rate%></h4>
<h3><%= r.review%></h3>
<% if r.user_id == session[:user_id]%>
<a href="/review/<%= r.id %>/edit">Edit Review</a>
<p>Posted by: <%=r.user.username%>
<hr>
    <%end%>
<%end%>

